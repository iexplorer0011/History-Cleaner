{
  "manifest_version": 3,
  "name": "History Cleaner",
  "description": "Automatically clears selected browsing data when Chrome starts.",
  "version": "1.0.0",
  "permissions": ["browsingData", "storage", "history", "alarms"],
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "16": "assets/icons/favicon-16x16.png",
    "32": "assets/icons/favicon-32x32.png",
    "48": "assets/icons/android-chrome-192x192.png",
    "128": "assets/icons/android-chrome-192x192.png",
    "512": "assets/icons/android-chrome-512x512.png"
  },
  "action": {
    "default_title": "History Cleaner",
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "assets/icons/favicon-16x16.png",
      "32": "assets/icons/favicon-32x32.png"
    }
  }
}
